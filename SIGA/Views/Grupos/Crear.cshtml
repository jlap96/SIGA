@model Grupos
@{
    ViewData["Title"] = "Crear grupo";
}

<link rel="stylesheet" href="~/css/Forms.css" />
<link rel="stylesheet" href="~/css/Alerts.css" />
<link rel="stylesheet" href="~/css/Buttons.css" />
<div class="form-cont">
    <h1>CREAR GRUPO</h1>
    <div asp-validation-summary="ModelOnly" class="errorAlert"></div>

    <form asp-action="Crear" class="form">
        <div class="field">
            <label asp-for="Nombre"></label>
            <input type="text" asp-for="Nombre" />
        </div>

        <div class="field">
            <label asp-for="Titular"></label>
            <input type="text" asp-for="Titular" />
        </div>

        <button class="btn secondary"><a asp-action="Index">Cancelar</a></button>
        <button type="submit" class="btn success" onclick="location.href='@Url.Action("Index", "Grupos")'">Guardar</button>

    </form>
    <script src="~/js/ValidationGrups.js" asp-append-version="true"></script>
</div>
