@model IEnumerable<EducationLevel>

@{
    ViewData["Title"] = "Niveles educativos";
}
<link rel="stylesheet" href="~/css/Forms.css" />
<link rel="stylesheet" href="~/css/Alerts.css" />
<link rel="stylesheet" href="~/css/Tables.css" />
<link rel="stylesheet" href="~/css/Buttons.css" />
<div class="alerts">
    @if (!string.IsNullOrEmpty(ViewBag.sms))
    {
        <div id="successAlert" class="successAlert hide">
            <span class="material-symbols-outlined">
                check_circle
            </span>
            <span class="msg">¡Correcto!</span>
            <p>@ViewBag.sms</p>
        </div>
    }
   
</div>

<div class="table-container">
    <h1>NIVELES EDUCATIVOS</h1>
    
    <a asp-action="Create" class="btn primary" style="padding: 12px;">Crear nuevo</a>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Costo inscripción</th>
                <th>Costo colegiatura</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var educationLevel in Model)
            {
                <tr>
                    <td>
                        @educationLevel.Nombre
                    </td>
                    <td>
                        $@educationLevel.CostoInscripcion
                    </td>
                    <td>
                        $@educationLevel.CostoColegiatura
                    </td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@educationLevel.Id" class="btn primary">
                            <span class="material-symbols-outlined" style="font-size: 20px;">
                                edit
                            </span>
                        </a>
                        <a asp-action="Borrar" asp-route-id="@educationLevel.Id" class="btn danger" style="margin-left: 10px;">
                            <span class="material-symbols-outlined" style="font-size: 20px;">
                                delete
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="~/js/ShowAlerts.js" asp-append-version="true"></script>
</div>
